<div class="container-xl container-lg container-md container-fluid login">
    <h1>Enter your new email</h1>
    <div class="col mb-2">
        <div class="row">
            <form action="/company-edit-email" method="POST">
                <div class="form-group">
                    <p>Your Email <b>{{currentCompany.email}}</b></p>
                    <label class="label-login" for="new-email-input"> New Email: </label>
                    <input class="form-control {{#if errors}}is-invalid{{/if}}" type="email" name="newEmail" id="new-email-input">
                    {{#if errors.email}}
                    <div class="invalid-feedback">{{errors.email}}</div>
                    {{/if}}
                    <label class="label-login" for="confirm-email-input"> Confirm Email: </label>
                    <input class="form-control {{#if errors}}is-invalid{{/if}}" type="email" name="confirmEmail" id="confirm-email-input">
                    {{#if errors.confirmEmail}}
                    <div class="invalid-feedback">{{errors.confirmEmail}}</div>
                    {{/if}}
                    <button class="btn btn-access mt-3" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>